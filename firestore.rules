rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profile collection
    match /users/{userId} {
      // Allow authenticated users to read and write their own profile only
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Hotplaces collection - readable by all users
    match /hotplaces/{placeId} {
      allow read: if true;
      // Only authenticated users can write (for admin purposes)
      allow write: if request.auth != null;
    }
    
    // Scents collection - readable by all users
    match /scents/{scentId} {
      allow read: if true;
      // Only authenticated users can write (for admin purposes)
      allow write: if request.auth != null;
    }
    
    // Articles collection - readable by all users
    match /articles/{articleId} {
      allow read: if true;
      // Only authenticated users can write (for admin purposes)
      allow write: if request.auth != null;
    }
  }
} 